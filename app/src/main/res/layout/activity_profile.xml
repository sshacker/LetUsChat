<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/profile_profile_image"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/default_avatar"
       android:layout_centerHorizontal="true"
       />
    <TextView
        android:id="@+id/profile_profile_display_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_profile_image"
        />

    <TextView
        android:id="@+id/profile_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Status"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_profile_display_name_text"
         />

    <TextView
        android:id="@+id/profile_total_friends_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Friends"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_status_text"
        />

    <Button
        android:id="@+id/profile_send_friend_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND FRIEND REQUEST"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_total_friends_text"
        />

    <Button
        android:id="@+id/profile_decline_friend_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DECLINE FRIEND REQUEST"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_send_friend_request_button"
        />

</RelativeLayout>